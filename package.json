{
  "name": "checklist-core",
  "version": "1.0.0",
  "main": "./src/index.js",
  "scripts": {
    "build": "gulp",
    "start": "gulp serve",
    "lint:js": "eslint ./src",
    "lint-staged": "lint-staged",
    "migrate": "migrate-mongo -f ./migrations/mongo/migrate-mongo-config.js",
